<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème principal de l'application -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/lighterOrange</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/deepBlue</item>
        <item name="android:navigationBarColor">@color/deepBlue</item>
    </style>

    <!-- Variante sombre du thème -->
    <style name="Theme.MyApp.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/somewhatBeige</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/lighterOrange</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources>
